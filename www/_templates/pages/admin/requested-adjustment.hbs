      <section>
        <div class="form-group">
          <label class="form-label" for="time-needed">Extra time needed</label>
          <!-- <input type="number" class="form-control form-control-small" id="time-needed" value="100" min="100" max="200"/>
          <span>% of the allotted time</span> -->
          <select name="" id="time-needed">
            <option value="null">-- Select extra time --</option>
            <option value="10">10% added</option>
            <option value="25">25% added</option>
            <option value="50">50% added</option>
            <option value="75">75% added</option>
            <option value="100">100% added</option>
          </select>
        </div>

        <div class="panel-indent text" id="time-examples">
          <p id="time-10" class="toggle-content">10% added to a 20 minute test would be 22 minutes</p>
          <p id="time-25">25% added to a 20 minute test would be 25 minutes</p>
          <p id="time-50" class="toggle-content">50% added to a 20 minute test would be 30 minutes</p>
          <p id="time-75" class="toggle-content">75% added to a 20 minute test would be 35 minutes</p>
          <p id="time-100" class="toggle-content">100% added to a 20 minute test would be 40 minutes</p>
        </div>
      </section>

      <div class="form-group">
        <a href="view-candidate.html?change=adjustment" class="button">Save adjustment</a>
      </div>
    </section>


  </div>
</div>

<script>
  $(function() {
    $('#time-needed').on('change', function() {
      var amount = $(this).val();

      if(amount !== 'null') {
        $('#time-examples').find('#time-' + amount).show();
        $('#time-examples').find('p').not('#time-' + amount).hide();


      }

    });
  });
</script>