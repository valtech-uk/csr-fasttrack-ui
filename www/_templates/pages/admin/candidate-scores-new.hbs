    <script>
      $(function() {

        $('[data-scoretable] select').on('change', function() {
          var thisScore = Number($(this).val()),
              $thisRow = $(this).closest('tr'),
              $totalElement = $thisRow.find('[data-scoretotal]'),
              $siblingSelects = $thisRow.find('select').not(this),
              $allScoreTotals = $(this).closest('table').find('[data-scoretotal]'),
              $overallElement = $(this).closest('table').find('[data-overalltotal]');
              rowSum = 0,
              overallSum = 0;

          $siblingSelects.each(function() {
            rowSum += parseFloat(this.value);
          });

          $totalElement.text(thisScore + rowSum);

          if($thisRow.is('[data-doublescore]')) {
            $totalElement.text((thisScore + rowSum) * 2);
          }

          $allScoreTotals.each(function() {
            overallSum += parseFloat($(this).text());
          });

          $overallElement.text(overallSum);

        });


      });
    </script>


