---
pageTitle: Find a candidate
layout: admin-layout.hbs
---

<div class="hgroup">
  <h1 class="heading-xlarge">Pass mark setting <a class="inl-block font-small" href="find-candidate.html">Return to start</a></h1>
</div>

<div class="grid-wrapper">
  <div class="grid grid-1-3">
    <div class="form-group">
      <label for="selectScheme" class="form-label">Select scheme to filter pass marks</label>
      <select name="" id="selectScheme">
        <option value="null">-- Select one --</option>
        <option value="scheme-business" selected>Business</option>
        <option value="scheme-commercial">Commercial</option>
        <option value="scheme-dant">Digital and technology</option>
        <option value="scheme-finance">Finance</option>
        <option value="scheme-project">Project delivery</option>
      </select>
    </div>
    <section class="toggle-content" id="sectionSetPassmarks">
      <div class="grid grid-1-2">
        <div class="inner-block-padr">
          <div class="form-group" data-range-slider>
            <label for="score-01" class="form-label">Competency</label>
            <input type="range" class="form-range" id="score-01" min="0" max="100">
            <label for="score-01-num" class="visuallyhidden">Competency score number input</label>
            <input type="number" id="score-01-num" class="form-control form-control-hours" min="0" max="100">
          </div>
          <div class="form-group" data-range-slider>
            <label for="score-02" class="form-label">Verbal</label>
            <input type="range" class="form-range" id="score-02" min="0" max="100">
            <label for="score-02-num" class="visuallyhidden">Competency score number input</label>
            <input type="number" id="score-02-num" class="form-control form-control-hours" min="0" max="100">
          </div>
          <div class="form-group" data-range-slider>
            <label for="score-03" class="form-label">Numerical</label>
            <input type="range" class="form-range" id="score-03" min="0" max="100">
            <label for="score-03-num" class="visuallyhidden">Competency score number input</label>
            <input type="number" id="score-03-num" class="form-control form-control-hours" min="0" max="100">
          </div>
          <div class="form-group" data-range-slider>
            <label for="score-04" class="form-label">SJQ</label>
            <input type="range" class="form-range" id="score-04" min="0" max="100">
            <label for="score-04-num" class="visuallyhidden">Competency score number input</label>
            <input type="number" id="score-04-num" class="form-control form-control-hours" min="0" max="100">
          </div>
        </div>
      </div>
      <div class="grid grid-1-2">
        <div class="inner-block-padr">
          <div class="form-group" data-range-slider>
            <label for="score-overall" class="form-label">Overall</label>
            <input type="range" class="form-range" id="score-overall" min="0" max="100">
            <label for="score-overall-num" class="visuallyhidden">Overall score number input</label>
            <input type="number" id="score-overall-num" class="form-control form-control-hours" min="0" max="100">
          </div>
        </div>
      </div>
    </section>
  </div>
  <div class="grid grid-2-3">
    <div class="panel-info" id="panelStart">
      <p>Start by selecting a scheme</p>
    </div>
    <section class="toggle-content" id="sectionMap">
      <h2 class="heading-medium">Total candidates: 2612</h2>
      <h2 class="heading-medium">Total passed: 732</h2>

      Map
    </section>


  </div>
</div>


<!-- Don't include in prod -->
<script>
  $(function() {
    if($('#selectScheme').val() !== 'null') {
      $('#sectionSetPassmarks, #sectionMap').show();
      $('#panelStart').hide();
    }

    $('#selectScheme').on('change', function() {
      if($('#selectScheme').val() !== 'null') {
        console.log('no');
        $('#sectionSetPassmarks, #sectionMap').show();
        $('#panelStart').hide();
      } else {
        console.log('yes');
        $('#sectionSetPassmarks, #sectionMap').hide();
        $('#panelStart').show();
      }
    });

    $('[data-range-slider]').each(function() {
      var rangeSlider = $(this).find('[type="range"]'),
          rangeNumber = $(this).find('[type="number"]');

      rangeNumber.val(rangeSlider.val());

      rangeSlider.on('input change', function() {
        rangeNumber.val(rangeSlider.val());
      });

      rangeNumber.on('input change', function() {
        rangeSlider.val(rangeNumber.val());
      }).focusin(function() {
        rangeSlider.addClass('active');
      }).focusout(function() {
        rangeSlider.removeClass('active');
      });


    });

  });
</script>