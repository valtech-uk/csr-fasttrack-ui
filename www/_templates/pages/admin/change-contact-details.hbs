---
pageTitle: Find a candidate
layout: admin-layout.hbs
---

    <h2 class="heading-xlarge">
      Find a candidate
    </h2>
    <p><a href="candidate-results.html">Return to results</a></p>

    <section class="section-border">
      <div class="grid-wrapper">
        <div class="grid grid-2-3">
          <h3 class="heading-large">Candidate contact details</h3>
        </div>
        <div class="grid grid-1-3">
          <ul class="page-link list-text">
            <li><a href="view-candidate.html" class="button no-right-margin">Save changes</a></li>
            <li><a href="view-candidate.html">Cancel changes</a></li>
          </ul>
        </div>
      </div>
      <div class="form-group">
        <label for="email-address" class="form-label">Email address</label>
        <input id="email-address" type="email" class="form-control" autocorrect="off" value="john.smith@email.com" >
      </div>

      <div class="form-group form-group-compound">
        <label for="first-name" class="form-label">First name</label>
        <input id="first-name" type="text" class="form-control" autocorrect="off" value="John" >
      </div>
      <div class="form-group">
        <label for="last-name" class="form-label">Last name</label>
        <input id="last-name" type="text" class="form-control" autocorrect="off" value="Smith" >
      </div>

      <div class="form-group">
        <label for="preferredName" class="form-label">What should we call you?</label>
        <input type="text" id="preferredName" class="form-control" autocorrect="off" value="John">
      </div>

      <div class="form-group inline-fixed">
        <p class="form-label">Date of birth</p>
        <div class="form-group form-group-compound">
          <label class="date-hint" for="dob-day">Day</label>
          <input type="tel" class="form-control form-control-xsmall" maxlength="2" id="dob-day" value="19">
        </div>
        <div class="form-group form-group-compound">
          <label class="date-hint" for="dob-month">Month</label>
          <input type="tel" class="form-control form-control-xsmall" maxlength="2" id="dob-month" value="05">
        </div>
        <div class="form-group form-group-compound form-group-year">
          <label class="date-hint" for="dob-year">Year</label>
          <input type="tel" class="form-control form-control-small" maxlength="4" id="dob-year" value="1994">
        </div>
      </div>
      <div id="addressManualInput">
        <div class="form-group form-group-compound">
          <label for="address1" class="form-label">Address</label>
          <input id="address1" type="text" class="form-control" autocorrect="off" value="38 Bolton Road">
        </div>
        <div class="form-group form-group-compound">
          <label for="address2" class="form-label visuallyhidden">Second line (optional)</label>
          <input id="address2" type="text" class="form-control" autocorrect="off" value="Windsor">
        </div>
        <div class="form-group form-group-compound">
          <label for="address3" class="form-label visuallyhidden">Third line (optional)</label>
          <input id="address3" type="text" class="form-control" autocorrect="off" value="Windsor and Maidenhead">
        </div>
        <div class="form-group form-group-compound">
          <label for="address3b" class="form-label visuallyhidden">Fourth line (optional)</label>
          <input id="address3b" type="text" class="form-control" autocorrect="off" value="">
        </div>
        <div class="form-group">
          <label for="address4" class="form-label">Postcode</label>
          <input id="address4" type="text" class="form-control form-control-large" autocapitalize="characters" autocorrect="off" value="SL3 5LK">
        </div>
      </div>
      <div class="form-group form-group-compound">
        <label class="form-label" for="phone-input">Telephone number</label>
        <input type="tel" class="form-control form-control-1-3 med-btm-margin" id="phone-input" value="07988 346763">
      </div>
    </section>
    <a href="view-candidate.html" class="button">Save changes</a>
    <a href="view-candidate.html">Cancel changes</a>
