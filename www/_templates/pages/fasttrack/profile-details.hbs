<h1 class="heading-xlarge" id="personalDetailsHeading">{{ pageTitle }}</h1>

<fieldset class="fieldset-with-border">
  <legend class="heading-large">Name and date of birth</legend>
  <div class="form-group form-group-compound">
    <label for="first-name" class="form-label">First name</label>
    <input id="first-name" type="text" class="form-control" autocorrect="off" value="Firstname" >
  </div>
  <div class="form-group">
    <label for="last-name" class="form-label">Last name</label>
    <input id="last-name" type="text" class="form-control" autocorrect="off" value="Lastname" >
  </div>

  <div class="form-group">
    <label for="preferredName" class="form-label">What should we call you?</label>
    <input type="text" id="preferredName" class="form-control" autocorrect="off" value="Firstname">
  </div>

  <div class="form-group inline-fixed">
    <p class="form-label">Date of birth</p>
    <span class="form-hint">For example, 19 7 1994</span>
    <div class="form-group form-group-compound">
      <label class="date-hint" for="dob-day">Day</label>
      <input type="tel" class="form-control form-control-xsmall" maxlength="2" id="dob-day">
    </div>
    <div class="form-group form-group-compound">
      <label class="date-hint" for="dob-month">Month</label>
      <input type="tel" class="form-control form-control-xsmall" maxlength="2" id="dob-month">
    </div>
    <div class="form-group form-group-compound form-group-year">
      <label class="date-hint" for="dob-year">Year</label>
      <input type="tel" class="form-control form-control-small" maxlength="4" id="dob-year">
    </div>
  </div>
</fieldset>

