<nav class="tabbed-nav">
  <a class="tabbed-tab active" href="#" id="account-tab-control" tab="#tab1">Your account</a>
  <a class="tabbed-tab" href="#" id="savedsearch-tab-control" tab="#tab2">Saved searches</a>
</nav>
<div class="tabbed-content active">

  <div id="account" class="tabbed-element tab1 active width-all-1-1">

    <h2 class="heading-large">Personal details</h2>

    <div class="panel-indent">
      <p class="text">Any changes you make will be seen on draft or new applications. Submitted applications will continue to show your old details.</p>
    </div>

    <div class="form-group form-group-compound">
      <label for="firstName" class="form-label">First name</label>
      <input type="text" id="firstName" class="form-control" value="John">
    </div>
    <div class="form-group">
      <label for="lastName" class="form-label">Last name</label>
      <input type="text" id="lastName" class="form-control" value="Smith">
    </div>
    <div class="form-group inline-fixed">
      <p class="form-label">Date of birth</p>
      <div class="form-group form-group-compound">
        <label class="form-hint" for="dob-day">Day</label>
        <input type="tel" class="form-control form-control-xsmall" maxlength="2" pattern="[0-9]*" id="dob-day" value="12">
      </div>
      <div class="form-group form-group-compound">
        <label class="form-hint" for="dob-month">Month</label>
        <input type="tel" class="form-control form-control-xsmall" maxlength="2" pattern="[0-9]*" id="dob-month" value="11">
      </div>
      <div class="form-group form-group-compound form-group-year">
        <label class="form-hint" for="dob-year">Year</label>
        <input type="tel" class="form-control form-control-small" maxlength="4" pattern="[0-9]*" id="dob-year" value="1990">
      </div>
    </div>
    <div class="form-group form-group-compound" id="addressInputWrapper">
      <label for="pca-addressInput" class="form-label">Enter your postcode or start typing address</label>
      <span class="form-hint">For example, WR2 6NJ</span>
      <input id="pca-addressInput" type="text" class="form-control form-control-1-3" autocapitalize="characters" autocorrect="off" value="">
    </div>
    <div class="form-group form-group-compound">
      <a href="#" class="copy-19" id="enterAddressManually">Or enter address manually</a>
      <span class="toggle-content loading-text" id="addressLoading">Loading address...</span>
    </div>
    <div id="manualAddressWrapper">
      <div class="address-manual-input" id="addressManualInput">
        <div class="form-group form-group-compound">
          <label for="pca-address1" class="form-label">Address</label>
          <input id="pca-address1" type="text" class="form-control" autocorrect="off" value="123">
        </div>
        <div class="form-group form-group-compound">
          <label for="pca-address2" class="form-label visuallyhidden">Second line (optional)</label>
          <input id="pca-address2" type="text" class="form-control" autocorrect="off" value="Glocuester Avenue">
        </div>
        <div class="form-group form-group-compound">
          <label for="pca-address3" class="form-label visuallyhidden">Third line (optional)</label>
          <input id="pca-address3" type="text" class="form-control" autocorrect="off" value="">
        </div>
        <div class="form-group form-group-compound">
          <label for="pca-address4" class="form-label visuallyhidden">Fourth line (optional)</label>
          <input id="pca-address4" type="text" class="form-control" autocorrect="off" value="Birmingham">
        </div>
        <div class="form-group">
          <label for="pca-postcode" class="form-label">Postcode</label>
          <input id="pca-postcode" type="text" class="form-control form-control-large" autocapitalize="characters" autocorrect="off" value="B23 8JK">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="phoneNumber" class="form-label">Phone</label>
      <div class="input-withlink">
        <input type="tel" id="phoneNumber" class="form-control" value="07942 733876" />
        <span class="input-withlink__link" id="verifyContainer">
        </span>
      </div>
    </div>
    <div class="form-group">
      <p class="form-label">Email</p>
      <span class="form-prepopped">yourname@email.com</span><a class="inl-block" href="change-email.html">Change email address</a>
    </div>

    <details>
      <summary>Your equality and diversity information</summary>
      <div class="detail-content">
        {{> monitoring }}
      </div>
    </details>

    <h2 class="heading-large" id="settingsNotifications">How we contact you</h2>
